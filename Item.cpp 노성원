#include "Item.h"


using namespace std;
using namespace sf;


int Item::collisionTest(Item& obj) {//new!
//int Item::collisionTest(MyRect& obj) {
    int distance = sqrt(pow(x - obj.getPosition().x, 2) + pow(y - obj.getPosition().y, 2));

   //if (distance < getRadius() + obj.getRadius()) {
   if (distance < radius + obj.getRadius()) {
        if (obj.getColor() == Color::Red) {
            return 1;
        }
        else if (obj.getColor() == Color::Blue) {
            return 2;
        }
        else if (obj.getColor() == Color::Green) {
            return 3;
        }
        else if (obj.getColor() == Color::Yellow) {
            return 4;
        }
    }
    return 0;
}


Color Item::getColor() {
	return circle.getFillColor();
}
void Item::setPosition(double x, double y) {//new!
    circle.setPosition(x, y);
}
void Item::setColor(Color fillColor) {
    circle.setFillColor(fillColor);
}

Vector2f Item::getPosition() {//new!
    return circle.getPosition();
}
float Item::getRadius() {//new!
    return circle.getRadius();
}

CircleShape* Item::getCircleShape() {
	return &circle;
}
